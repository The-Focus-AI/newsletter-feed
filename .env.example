# Application
NODE_ENV=development
PORT=3000
PROVIDER=gmail

# Database (auto-populated by 'supabase start')
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Encryption (will be auto-generated if not provided)
ENCRYPTION_KEY=

# Gmail Configuration (only if PROVIDER=gmail)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth2callback

# Hotmail Configuration (only if PROVIDER=hotmail)
HOTMAIL_EMAIL=
HOTMAIL_PASSWORD=

# Sync Settings
INITIAL_SYNC_DAYS=30
MAX_LINK_REDIRECTS=10
LINK_RESOLUTION_TIMEOUT=5000
LINK_BATCH_SIZE=50

# Retry Settings
MAX_RETRIES=5
RETRY_DELAYS=1000,2000,4000,8000,16000
